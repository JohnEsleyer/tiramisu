{
    "name": "tiramisu",
    "version": "1.0.1",
    "description": "Programmatic video creation engine using Canvas API and FFmpeg",
    "type": "module",
    "main": "./index.ts",
    "types": "./index.ts",
    "exports": {
        ".": {
            "import": "./index.ts",
            "types": "./index.ts"
        },
        "./client": {
            "import": "./src/Client.ts",
            "types": "./src/Client.ts"
        },
        "./types": {
            "import": "./src/types.ts",
            "types": "./src/types.ts"
        }
    },
    "files": [
        "src",
        "index.ts",
        "README.md"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "build:wasm": "cd src/rust_audio && cargo build --target wasm32-unknown-unknown --release && cd ../.. && wasm-bindgen src/rust_audio/target/wasm32-unknown-unknown/release/tiramisu_audio_analyzer.wasm --out-dir ./src/wasm --target nodejs",
        "build": "bun run build:wasm"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "puppeteer": "^24.36.1"
    },
    "devDependencies": {
        "@types/bun": "^1.3.8",
        "@types/node": "^22.0.0",
        "typescript": "^5.7.0"
    }
}
