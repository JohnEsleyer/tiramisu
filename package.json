{
  "name": "tiramisu",
  "version": "2.1.0",
  "main": "index.ts",
  "module": "index.ts",
  "types": "index.ts",
  "type": "module",
  "scripts": {
    "BASE_EXTERNAL": "--external \"./src/Tiramisu\" --external \"./src/Server\" --external \"./src/Browser\" --external \"./src/Encoder\" --external \"./src/CLI\" --external \"./src/AudioAnalysis\" --external \"puppeteer\"",

    "build": "bun build ./index.ts --target bun --outfile ./dist/tiramisu.js",
    
    "build:editor": "bun build ./examples/video-editor/app.ts --target browser --outfile ./examples/video-editor/editor-bundle.js $BASE_EXTERNAL",
    "dev:editor": "bun run build:editor && bun run examples/serve.ts",
    
    "build:upload": "bun build ./examples/video-upload/app.ts --target browser --outfile ./examples/video-upload/bundle.js $BASE_EXTERNAL",
    "dev:upload": "bun run build:upload && bun run examples/serve.ts",

    "build:audio-overlay": "bun build ./examples/video-audio-overlay/app.ts --target browser --outfile ./examples/video-audio-overlay/bundle.js $BASE_EXTERNAL",
    "dev:audio-overlay": "bun run build:audio-overlay && bun run examples/serve.ts",

    "build:split-screen": "bun build ./examples/split-screen/app.ts --target browser --outfile ./examples/split-screen/bundle.js $BASE_EXTERNAL",
    "dev:split-screen": "bun run build:split-screen && bun run examples/serve.ts",
    
    "start:server": "bun run examples/serve.ts"
  },
  "dependencies": {
    "puppeteer": "^24.36.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^25.2.0"
  },
  "exports": {
    ".": {
      "import": "./index.ts"
    },
    "./client": {
      "import": "./src/Client.ts"
    }
  }
}